{
  "manifest_version": 3,
  "name": "AI CO₂ Counter",
  "description": "Riconosce le pagine AI e stima la CO₂ per ogni richiesta effettuata.",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "AI CO₂ Counter"
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "src/background/service_worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*",
    "*://www.chatgpt.com/*",
    "*://gemini.google.com/*",
    "*://claude.ai/*",
    "*://perplexity.ai/*",
    "*://www.perplexity.ai/*",
    "*://www.bing.com/*",
    "*://copilot.microsoft.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://www.chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://perplexity.ai/*",
        "*://www.perplexity.ai/*",
        "*://www.bing.com/*",
        "*://copilot.microsoft.com/*"
      ],
      "js": ["src/content/contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}

